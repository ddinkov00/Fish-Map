@model FishMap.Web.ViewModels.GroupTrips.GroupTripByIdViewModel

@{
    ViewData["Title"] = "_ListUsersPartial";
}

@if (Model.GuestsCount > 0)
{
    <div class="row">
        <div class="col-md-12">
            <h4>Записани потребители:</h4>
            <ul class="list-group">
                @foreach (var guest in Model.Guests)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@guest.Username </strong>
                        <span><a href="#" class="btn btn-sm btn-primary">Съобщение</a></span>
                    </li>
                }
            </ul>
        </div>
    </div>
    <hr class="alert-info" />
}